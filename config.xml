<?xml version='1.0' encoding='utf-8'?>
<widget id="com.snowulf.advancedcordovahelloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>advanced-cordova-helloworld</name>
    <description>
        A more advanced Hello World than what ships out of the box with Apache Cordova
    </description>
    <author email="jon@snowulf.com" href="https://snowulf.com">
        Jon 'ShakataGaNai' Davis
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
